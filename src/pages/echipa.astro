import aureliaIonitaImage from "@/assets/team/AURA-IONITA.jpeg";
import ionelMihaiImage from "@/assets/team/IONEL-MIHAI.jpeg";
import marianStoicaImage from "@/assets/team/MARIAN-STOICA.jpeg";
import luizaCalinaImage from "@/assets/team/LUIZA-CALINA.jpeg";
